<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/new_litview_child_pading"
    android:paddingTop="@dimen/new_litview_child_pading" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/showping_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1.8"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/newapdater_child_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:paddingLeft="@dimen/news_listview_pading" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/showping_rentou_image"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"
                    android:layout_weight="1.5"
                   />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:paddingLeft="@dimen/news_listview_pading" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/news_listview_text1"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/news_listview_huodezhe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="222222"
                            android:textColor="@color/new_listivew_child_height_image_color1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/news_listview_text2"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/news_listview_benqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="222222"
                            android:textColor="@color/new_listivew_child_height_image_color_text2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:textColor="#666666"
                            android:text="@string/news_child_tv2" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/news_listview_text3"
                        android:textColor="#999899"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/news_listview_xinyunbianma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sssss"
                        android:textColor="@color/new_listivew_child_height_image_color_text2"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/news_listview_text4"
                        android:textColor="#999899"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/news_listview_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:textColor="#999899"
                        android:text="sssss"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8" >

            <ImageView
                android:id="@+id/newadapter_imagebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/genduo" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_listview_pading"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>