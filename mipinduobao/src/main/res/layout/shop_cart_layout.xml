<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.mpdb.view.NoScrollListView
                android:id="@+id/shop_cart_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="5dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/shop_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总共夺宝 2个商品  "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计金额 ：1.00（优先结算0元购产品）"
                    android:textSize="10sp" />
            </LinearLayout>

            <Button
                android:id="@+id/shop_cart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/pay_button_shape"
                android:gravity="center"
                android:text="结算"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>