<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/shop_lv_item_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dip"
        android:scaleType="centerCrop"
        android:src="@drawable/defalut_product_png" />

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:singleLine="true"
            android:id="@+id/shop_lv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(第5期)全网手机卡" />

        <TextView
            android:id="@+id/shop_lv_item_hava"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:layout_height="wrap_content"
            android:text="剩余345人次" />

        <TextView
             android:textColor="#666666"
            android:id="@+id/shop_lv_item_duobao_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总共夺宝：1人次/1.00" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/shop_lv_item_jian"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_background"
                android:text="-" />

            <TextView
                android:id="@+id/shop_num"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_toRightOf="@id/shop_lv_item_jian"
                android:background="@drawable/et_backage"
                android:gravity="center"
                android:hint="1"
                android:padding="8dip" />

            <Button
                android:id="@+id/shop_lv_item_add"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_toRightOf="@+id/shop_num"
                android:background="@drawable/btn_background"
                android:text="+" />

            <ImageButton
                android:id="@+id/shop_lv_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:background="@android:color/white"
                android:src="@drawable/shanchu" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>